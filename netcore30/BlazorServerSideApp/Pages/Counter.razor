@page "/counter"

<h1>Counter updated</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="@IncrementCount">Click me</button>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
        System.Console.WriteLine($"currentCount: {currentCount}");
        System.Console.WriteLine($"currentCount2: {currentCount}");
    }
}
